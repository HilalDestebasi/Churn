<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="0dp"
    android:background="@color/support_color_orange"
    android:layout_marginTop="0dp"
    android:focusableInTouchMode="true">
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="MY CUSTOMERS"
        android:layout_centerHorizontal="true"
        android:textColor="@color/main_color"
        android:textSize="30dp"
        android:textStyle="bold" />
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        app:columnCount="2"
        android:layout_below="@id/appName"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/add_client"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/circle"
            app:backgroundTint="@color/main_color"
            android:drawableLeft="@drawable/ic_action_add"
            android:text="ADD CLIENT" />


        <Button
            android:id="@+id/search"
            android:layout_width="150dp"
            app:backgroundTint="@color/main_color"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_action_searc"
            android:text="SEARCH CLIENT" />

        <Button
            android:id="@+id/groups"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:backgroundTint="@color/main_color"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_action_name"
            android:text="GROUPS" />

        <Button
            android:id="@+id/list_all"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:backgroundTint="@color/main_color"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_action_list"
            android:text="LIST ALL" />

        <Button
            android:id="@+id/test_list"
            android:layout_width="150dp"
            app:backgroundTint="@color/main_color"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_action_test_list"
            android:text="TEST LIST" />

        <Button
            android:id="@+id/history"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:backgroundTint="@color/main_color"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_action_history"
            android:text="HISTORY" />

        <Button
            android:id="@+id/product_list"
            android:layout_width="150dp"
            app:backgroundTint="@color/main_color"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_action_product"
            android:text="PRODUCT LIST" />

        <Button
            android:id="@+id/edit_profile"
            android:layout_width="150dp"
            app:backgroundTint="@color/main_color"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle"
            android:drawableLeft="@drawable/ic_action_edit"
            android:text="EDIT PROFILE" />



    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>